# Enterprise AI Assistant Configuration Template
# Copy this file to .env and customize for your deployment

# =============================================================================
# CORE API CONFIGURATION
# =============================================================================

# Backend API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=false

# Frontend Configuration  
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=8501
API_URL=http://localhost:8000

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# Primary Provider Selection (choose one)
# Options: ollama, openai, anthropic, openrouter, groq
LLM_PROVIDER=ollama

# Model Selection (provider-specific)
LLM_MODEL=qwen2.5:7b-instruct
MODEL_ID=qwen2.5:7b-instruct

# API Keys for Cloud Providers (only needed if not using Ollama)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OPENROUTER_API_KEY=
GROQ_API_KEY=

# HuggingFace Configuration (fallback provider)
HUGGINGFACEHUB_API_TOKEN=your_hf_token_here

# =============================================================================
# GENERATION PARAMETERS
# =============================================================================

MAX_NEW_TOKENS=512
TEMPERATURE=0.7
TOP_P=0.95

# =============================================================================
# SECURITY & PERFORMANCE
# =============================================================================

# Authentication (optional)
# API_KEY=your_optional_bearer_token_here

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Request Limits
INPUT_CHAR_LIMIT=8000
REQUEST_SIZE_LIMIT_BYTES=1048576

# =============================================================================
# RELIABILITY & TIMEOUTS
# =============================================================================

HF_CONNECT_TIMEOUT=10.0
HF_READ_TIMEOUT=30.0
HF_MAX_RETRIES=3
HF_RETRY_DELAY=1.0

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS & Security
CORS_ORIGINS=*
REQUEST_TIMEOUT=30

# Streamlit Settings
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false

# Development
DEBUG=false
RELOAD_ON_CHANGE=false
