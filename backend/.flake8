[flake8]
# Enterprise Python Code Quality Configuration

# Maximum line length (industry standard)
max-line-length = 127

# Maximum cyclomatic complexity (enterprise threshold)
max-complexity = 10

# Exclude patterns
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .tox,
    dist,
    build,
    *.egg-info,
    .coverage.*,
    htmlcov,
    .pytest_cache

# Error codes to ignore (with business justification)
ignore = 
    # E203: Whitespace before ':' (conflicts with black formatter)
    E203,
    # W503: Line break before binary operator (PEP 8 updated guidance)
    W503

# Per-file ignores for specific cases
per-file-ignores =
    # Test files: allow unused imports for fixtures/mocks and function redefinition for test variants
    test_*.py:F401,F811

# Show source code for each error
show-source = True

# Count errors and warnings
count = True

# Statistical summary  
statistics = True

# Format for CI/CD pipelines
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s
